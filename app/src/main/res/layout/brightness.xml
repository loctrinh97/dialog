<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#191818"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_brightness_6_24"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

        </ImageView>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Brightness"
            android:textColor="#03A9F4"
            android:textSize="25sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_bright" />

    <CheckBox
        android:checked="true"
        android:id="@+id/cbAuto"
        android:layout_marginLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Automatic brightness"
        android:textColor="#F4F5F6">
    </CheckBox>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="100"
        android:progress="50"></SeekBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#191818"
            android:textColor="#FFFF"
            android:text="Cancel"
            android:textStyle="normal"></Button>

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#191818"
            android:textColor="#FFFF"
            android:text="OK"></Button>
    </LinearLayout>
</LinearLayout>